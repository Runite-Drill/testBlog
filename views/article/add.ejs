<h1>Add Article</h1>

<form method="post" action="/article/add">

    <div>
        <label>Title</label>
        <input name="title" type="text">
    </div>
    <br>
    <div>
        <label>Description</label>
        <textarea name="description" placeholder="A short clickbait description of the article"></textarea>
    </div>
    <br>
    <div>
        <label>Content</label>
        <textarea name="content" placeholder="The full article text"></textarea>
    </div>
    <br>
    <div>
        <label>Is Published</label>
        <input name="isPublished" type="checkbox" value="true"> <!-- note: checkbox will return VALUE when checked, and nothing when unchecked -->
    </div>
    <br>
    <div>
        <label>Total Words</label>
        <input name="totalWords" type="number">
    </div>
    <br>
    <div>
        <label>Author</label>
        <input name="author" type="text">
    </div>
    <br><br>
    <button type="submit">Create Article</button>
</form>